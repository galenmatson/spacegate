FROM python:3.12-slim

WORKDIR /app

# Install API dependencies
COPY srv/api/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# Copy API code
COPY srv/api /app/srv/api
COPY scripts /app/scripts

ENV SPACEGATE_STATE_DIR=/data
ENV SPACEGATE_CACHE_DIR=/data/cache
ENV SPACEGATE_LOG_DIR=/data/logs

WORKDIR /app/srv/api

EXPOSE 8000
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
